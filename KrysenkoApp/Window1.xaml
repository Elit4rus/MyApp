<Window x:Class="KrysenkoApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrysenkoApp"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "10*"/>
            <ColumnDefinition Width = "100*"/>
            <ColumnDefinition Width = "10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="regLoginTB" Grid.Row="1" Grid.Column="1"
                 Width="300" Height="50"/>
        <TextBox x:Name="regPasswordTB" Grid.Row="2" Grid.Column="1"
                 Width="300" Height="50"/>
        <Button x:Name="regMainBtn" Grid.Row="3" Grid.Column="1"
                Width="300" Height="50" Content="Sign Up" Click="regMainBtn_Click"/>
    </Grid>
</Window>
